<UserControl x:Class="SampleBrowser.XamGridStandard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ig:XamGrid ItemsSource="{Binding Data}" AutoGenerateColumns="False">
            <ig:XamGrid.Columns>
                <ig:TextColumn Key="ID" />
                <ig:TextColumn Key="Name" />
                <ig:TextColumn Key="Number" />
                <ig:TextColumn Key="Date" />
            </ig:XamGrid.Columns>
        </ig:XamGrid>
    </Grid>
</UserControl>
